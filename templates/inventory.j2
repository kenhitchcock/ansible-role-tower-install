[tower]
localhost ansible_connection=local

[database]

[all:vars]
admin_password='{{ towerinstall_admin_password }}'

# override RAM req
# (AWS 4GB nodes actually have 3.75GB so pre-flight fails)
required_ram=2048

# Define Remote PostgreSQL for Tower
pg_host=''
pg_port=''

pg_database='awx'
pg_username='awx'
pg_password='{{ towerinstall_pg_password }}'

rabbitmq_username=tower
rabbitmq_password='{{ towerinstall_rabbitmq_password }}'
rabbitmq_cookie=cookiemonster

# Isolated Tower nodes automatically generate an RSA key for authentication;
# To disable this behavior, set this value to false
# isolated_key_generation=true

